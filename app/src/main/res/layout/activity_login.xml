<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".login.LoginActivity">

    <TextView
        android:id="@+id/titleTV2"
        android:layout_width="264dp"
        android:layout_height="105dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:text="Select Application Mode"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="@+id/titleTV"
        app:layout_constraintTop_toTopOf="@+id/titleTV" />

    <TextView
        android:id="@+id/titleTV"
        android:layout_width="264dp"
        android:layout_height="105dp"
        android:layout_marginTop="5dp"
        android:text="Select Application Mode"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.017" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="155dp"
        android:layout_marginStart="268dp"
        android:layout_marginTop="104dp"

        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4"
        app:srcCompat="@drawable/dad" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.187"
        app:srcCompat="@drawable/child_with_b" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.617"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/family" />

    <ImageView
        android:id="@+id/childIV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.644"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.212"
        app:srcCompat="@drawable/child_bubble" />

    <ImageView
        android:id="@+id/parentIV"
        android:layout_width="222dp"
        android:layout_height="67dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.414"
        app:srcCompat="@drawable/parent_b" />

    <ImageView
        android:id="@+id/registerParentIV"
        android:layout_width="252dp"
        android:layout_height="77dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.722"
        app:srcCompat="@drawable/new_parent_b" />

    <TextView
        android:id="@+id/childTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I am child (child login)"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/childIV"
        app:layout_constraintEnd_toEndOf="@+id/childIV"
        app:layout_constraintStart_toStartOf="@+id/childIV"
        app:layout_constraintTop_toTopOf="@+id/childIV" />

    <TextView
        android:id="@+id/parentTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Parent login"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/parentIV"
        app:layout_constraintEnd_toEndOf="@+id/parentIV"
        app:layout_constraintStart_toStartOf="@+id/parentIV"
        app:layout_constraintTop_toTopOf="@+id/parentIV" />

    <TextView
        android:id="@+id/registerParentTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register new parent account"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/registerParentIV"
        app:layout_constraintEnd_toEndOf="@+id/registerParentIV"
        app:layout_constraintStart_toStartOf="@+id/registerParentIV"
        app:layout_constraintTop_toTopOf="@+id/registerParentIV" />

</android.support.constraint.ConstraintLayout>